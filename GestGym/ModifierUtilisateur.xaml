<UserControl
    x:Class="GestGym.ModifierUtilisateur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto"
    Height="Auto">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*" />
            <ColumnDefinition Width="228*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  Zone de recherche  -->
        <StackPanel
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <TextBox
                x:Name="RechercheTextBox"
                Width="200"
                Margin="0,0,10,0"
                ToolTip="Nom, identifiant ou # employé" />
            <Button Click="BtnRechercher_Click" Content="Rechercher" />
        </StackPanel>
        <!--  Zone d'affichage/modification (cachée tant qu'aucun utilisateur n'est trouvé)  -->
        <StackPanel
            x:Name="FormPanel"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Visibility="Collapsed">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="20"
                FontWeight="Bold"
                Text="Modifier un utilisateur" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
                <TextBlock Text="Statut :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <RadioButton
                    x:Name="StatutActifRadio"
                    Content="Actif"
                    GroupName="Statut" />
                <RadioButton
                    x:Name="StatutInactifRadio"
                    Content="Inactif"
                    GroupName="Statut" />
            </StackPanel>

            <TextBlock Text="Nom :" />
            <TextBox x:Name="NomTextBox" Height="30" />
            <TextBlock Text="Téléphone :" />
            <TextBox x:Name="TelephoneTextBox" Height="30" />
            <TextBlock Text="# d'employé :" />
            <TextBox x:Name="NumEmployeTextBox" Height="30" />
            <TextBlock Text="Courriel :" />
            <TextBox x:Name="CourrielTextBox" Height="30" />
            <TextBlock Text="Identifiant :" />
            <TextBox x:Name="IdentifiantTextBox" Height="30" />
            <TextBlock Text="Mot de Passe :" />
            <PasswordBox x:Name="MotDePasseTextBox" Height="30" />
            <TextBlock Text="Date :" />
            <DatePicker x:Name="DatePicker" Height="30" />
            <TextBlock Text="Notes :" />
            <RichTextBox x:Name="NotesRichTextBox" Height="100" />
            <Button
                Width="120"
                Height="35"
                Margin="0,20,0,0"
                Click="BtnSauvegarder_Click"
                Content="Sauvegarder" />
        </StackPanel>
    </Grid>
</UserControl>
