<UserControl
    x:Class="GestGym.AjouterUtilisateur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <!--  Colonnes  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Lignes  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Titre sur toute la largeur  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="AJOUTER DES UTILISATEURS" />

            <!--  Champ Nom  -->
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Nom :" />
            <TextBox
                x:Name="NomTextBox"
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30" />

            <!--  Champ Téléphone  -->
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Téléphone :" />
            <TextBox
                x:Name="TelephoneTextBox"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30" />

            <!--  Champ Numéro d'Employé  -->
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="# d'employé :" />
            <TextBox
                x:Name="NumEmployeTextBox"
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30" />

            <!--  Champ Courriel  -->
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Courriel :" />
            <TextBox
                x:Name="CourrielTextBox"
                Grid.Row="6"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30" />

            <!--  Champ Identifiant  -->
            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Identifiant :" />
            <TextBox
                x:Name="IdentifiantTextBox"
                Grid.Row="7"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30" />

            <!--  Champ Mot de Passe  -->
            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Mot de Passe :" />
            <PasswordBox
                x:Name="MotDePasseTextBox"
                Grid.Row="8"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30" />

            <!--  Champ Date  -->
            <TextBlock
                Grid.Row="9"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Date :" />
            <DatePicker
                x:Name="DatePicker"
                Grid.Row="9"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="30"
                IsTodayHighlighted="True"
                SelectedDateFormat="Short" />

            <!--  Champ Notes  -->
            <TextBlock
                Grid.Row="10"
                Grid.Column="0"
                Margin="0,0,5,0"
                VerticalAlignment="Top"
                Text="Notes :" />
            <RichTextBox
                x:Name="NotesRichTextBox"
                Grid.Row="10"
                Grid.RowSpan="7"
                Grid.ColumnSpan="4"
                Height="100"
                Margin="230,0,48,65" />

            <!--  Boutons  -->
            <StackPanel
                Grid.Row="16"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="BtnAjouter"
                    Width="120"
                    Height="35"
                    Click="BtnAjouter_Click"
                    Content="Ajouter" />
                <Button
                    x:Name="BtnAnnuler"
                    Width="120"
                    Height="35"
                    Click="BtnAnnuler_Click"
                    Content="Annuler" />
            </StackPanel>


        </Grid>
    </ScrollViewer>
</UserControl>
